<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--添加顶部图片-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/book1_chapter03_01_10_top" />

    <!--添加一个相对布局管理器-->
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:background="@drawable/book1_chapter03_01_10_bottom">
        <!--添加中间位置的图片按钮-->
        <ImageView
            android:id="@+id/imageButton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/book1_chapter03_01_10_enter" />
        <!--添加上方显示的图片-->
        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton0"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/book1_chapter03_01_10_setting" />
        <!--添加下方显示的图片-->
        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton0"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/book1_chapter03_01_10_exit" />

        <!--添加左侧显示的图片-->
        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/imageButton0"
            android:src="@drawable/book1_chapter03_01_10_help" />
        <!--添加右侧显示的图片-->
        <ImageView
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/imageButton0"
            android:src="@drawable/book1_chapter03_01_10_board" />
    </RelativeLayout>
</LinearLayout>